{ 
    "compilerOptions": {
          "outDir": "./dist/",
          "lib": [ "es2015", "dom" ],
          "sourceMap": true,
          "noImplicitAny": true,
          "module": "commonjs",
          "target": "es5",
          "jsx": "react",
          "allowSyntheticDefaultImports": true,
          "esModuleInterop": true,
          "skipLibCheck": true,
          "forceConsistentCasingInFileNames": false,
          "types" : ["jest"]
      },
      "exclude": [
          "node_modules",
          "**/*.spec.ts*"
      ],
      "include": [
          "./src/**/*"
      ]
}